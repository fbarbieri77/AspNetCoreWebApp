@page
@model AspNetCoreWebApp.Pages.FlyImgModel
@{
}


<!DOCTYPE html>
<html>

<head>
    <title> Display Image on the Fly</title>
</head>
<body>
    <h1>Displaying an image on the fly</h1>

    <form>
        <p>
            I want to see:
            <select asp-for="PhotoChoice">
                <option value="Python1.jpg">Photo 1</option>
                <option value="Python2.png">Photo 2</option>
                <option value="Python3.jpg">Photo 3</option>
                <option value="Csp1.jpg">Photo 4</option>
                <option value="Csp2.jpg">Photo 5</option>
            </select>
            &nbsp;
            <input type="submit" value="Submit" />
        </p>
        <div style="padding:10px">
            @if (Model.ImagePath != "")
            {
                <img src="@Model.ImagePath" alt="Sample Image" width="100" />
            }
        </div>
    </form>

</body>
</html>